<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="3"
    android:background="#000000"
    android:orientation="horizontal">

    <com.nsky.kit.ui.widget.progressbar.CircleProgressBar
        android:id="@+id/custom_progress_solid_line"
        android:layout_width="74dp"
        android:layout_height="74dp"
        android:layout_marginTop="@dimen/default_margin"
        app:drawBackgroundOutsideProgress="true"
        app:progress_line_width="4dp"
        app:progress_stroke_width="4dp"
        app:internal_background_color = "@color/internal_bg_color"
        app:progress_background_color="@android:color/transparent"
        app:progress_end_color="@color/progress_color"
        app:progress_start_color="@color/progress_color"
        app:progress_stroke_cap="round"
        app:progress_text_color="@color/progress_bg_color"
        app:progress_style="solid_line" />


    <com.nsky.kit.ui.widget.progressbar.CircleProgressBar
        android:id="@+id/line_progress"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="@dimen/default_margin"
        app:drawBackgroundOutsideProgress="false" />

    <com.nsky.kit.ui.widget.progressbar.CircleProgressBar
        android:id="@+id/solid_progress"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="@dimen/default_margin"
        app:drawBackgroundOutsideProgress="true"
        app:progress_background_color="@color/holo_darker_gray"
        app:progress_end_color="@android:color/holo_green_light"
        app:progress_start_color="@android:color/holo_green_light"
        app:progress_start_degree="0"
        app:progress_text_color="@color/holo_blue_light"
        app:progress_style="solid" />

    <com.nsky.kit.ui.widget.progressbar.CircleProgressBar
        android:id="@+id/custom_progress1"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="@dimen/default_margin"
        app:drawBackgroundOutsideProgress="true"
        app:progress_background_color="@color/holo_darker_gray"
        app:progress_end_color="@android:color/transparent"
        app:progress_start_color="@android:color/transparent"
        app:progress_stroke_width="1dp"
        app:progress_text_color="@color/holo_blue_light"
        app:progress_style="line" />

    <com.nsky.kit.ui.widget.progressbar.CircleProgressBar
        android:id="@+id/custom_progress2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="@dimen/default_margin"
        app:progress_background_color="@color/holo_darker_gray"
        app:progress_shader="radial"
        app:progress_start_color="@color/holo_red_light"
        app:progress_stroke_width="1dp"
        app:progress_text_color="@color/holo_red_light"
        app:progress_style="solid" />

    <com.nsky.kit.ui.widget.progressbar.CircleProgressBar
        android:id="@+id/custom_progress3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="@dimen/default_margin"
        app:progress_line_count="30"
        app:progress_line_width="2dp"
        app:progress_background_color="@color/holo_darker_gray"
        app:progress_start_color="@color/holo_orange_light"
        app:progress_stroke_width="1dp"
        app:progress_text_color="@color/holo_red_light"
        app:progress_text_size="@dimen/progress_text_size"
        app:progress_style="line" />


    <com.nsky.kit.ui.widget.progressbar.CircleProgressBar
        android:id="@+id/custom_progress5"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="@dimen/default_margin"
        app:progress_background_color="@color/holo_darker_gray"
        app:progress_end_color="@color/holo_green_light"
        app:progress_start_color="@color/holo_green_light"
        app:progress_stroke_width="3dp"
        app:progress_text_color="@color/holo_green_light"
        app:progress_style="solid_line" />

    <com.nsky.kit.ui.widget.progressbar.CircleProgressBar
        android:id="@+id/custom_progress6"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="@dimen/default_margin"
        app:progress_background_color="@color/holo_darker_gray"
        app:progress_start_color="@color/holo_green_light"
        app:progress_text_color="@color/holo_green_light"
        app:progress_style="line" />

</GridLayout>
